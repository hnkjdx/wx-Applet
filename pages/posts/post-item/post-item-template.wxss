.post-avatar-data{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-avatar{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-data{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;

}
.post-images{
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
   /*  letter-spacing: 2rpx; 行间距 */
  letter-spacing: 2rpx;     
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  /* 行方向  flex-direction: row; */
  flex-direction: row; 
  line-height: 16px;
  margin-left: 10px;
}
.post-like-images{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  /* 垂直居中 vertical-align: middle; */
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}