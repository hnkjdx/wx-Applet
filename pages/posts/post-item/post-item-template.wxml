<template name="postItem">
  <view class="post-container">
    <view class="post-avatar-data">
      <image class="post-avatar" src="{{avatar}}"></image>
      <text class="post-data">{{data}}</text>
    </view>
    <text class="post-title">{{title}}</text>
    <image class="post-images" src='/images/post/crab.png'></image>
    <text class="post-content">{{content}}</text>
    <view class="post-like">
      <image class="post-like-images" src='../../images/icon/chat.png'></image>
      <text class="post-like-font">{{reading}}</text>
      <image class="post-like-images" src='../../images/icon/view.png'></image>
      <text class="post-like-font">{{collection}}</text>
    </view>
  </view>
</template>